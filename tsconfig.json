{
  "compilerOptions": {
    // Allows us to use breakpoints for debugging
    "sourceMap": true,
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "noLib": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@internal/logic": [
        "logic/index.ts"
      ],
      "@internal/server": [
        "server.ts"
      ],
    }
  },
  "include": [
    "./src/**/*"
  ]
}